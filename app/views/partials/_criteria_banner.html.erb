  <div class="nlhf-banner__message">

    <h2 class="govuk-heading-m">
      <%= t('covid_banner.heading') %>
    </h2>

    <p class="govuk-body">
      <%= t('covid_banner.p.1') %>
    </p>

    <ul class="govuk-list govuk-list--bullet">
      <li><%= t('generic.countries.scotland') %></li>
      <li><%= t('generic.countries.ni') %></li>
    </ul>

    <p class="govuk-body govuk-!-margin-bottom-3">
      <%= 
        t(
          'covid_banner.p.2',
          href:
            link_to(
              t('covid_banner.links.1.text'),
              t('covid_banner.links.1.url')
            )
        ).html_safe
      %>
    </p>

  </div>

</div>